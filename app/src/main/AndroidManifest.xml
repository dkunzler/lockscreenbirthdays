<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.devland.lockscreenbirthdays">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:name="de.devland.lockscreenbirthdays.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_material_cake"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <receiver
            android:name="de.devland.lockscreenbirthdays.UserPresentReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>

        <service
            android:name="de.devland.lockscreenbirthdays.BirthdayService"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name="de.devland.lockscreenbirthdays.MainActivity"
            android:label="@string/title_activity_main" />

        <activity-alias
            android:name="de.devland.lockscreenbirthdays.launcher.Cupcake"
            android:enabled="false"
            android:icon="@mipmap/ic_launcher_cupcake"
            android:targetActivity="de.devland.lockscreenbirthdays.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>
        <activity-alias
            android:name="de.devland.lockscreenbirthdays.launcher.Cake"
            android:enabled="false"
            android:icon="@mipmap/ic_launcher_cake"
            android:targetActivity="de.devland.lockscreenbirthdays.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>
        <activity-alias
            android:name="de.devland.lockscreenbirthdays.launcher.MaterialCake"
            android:icon="@mipmap/ic_launcher_material_cake"
            android:targetActivity="de.devland.lockscreenbirthdays.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>
        <activity-alias
            android:name="de.devland.lockscreenbirthdays.launcher.MaterialCupcake"
            android:enabled="false"
            android:icon="@mipmap/ic_launcher_material_cupcake"
            android:targetActivity="de.devland.lockscreenbirthdays.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <receiver
            android:name="de.devland.lockscreenbirthdays.BootRececeiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="de.devland.lockscreenbirthdays.DismissReceiver"
            android:enabled="true"
            android:exported="false" />
        <receiver
            android:name="de.devland.lockscreenbirthdays.RemoveNotificationReceiver"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>